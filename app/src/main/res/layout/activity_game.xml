<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.GameActivity"
    android:orientation="vertical"
    android:background="@color/beje"
    >


    <RelativeLayout
        android:id="@+id/relativeForcaImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:src="@drawable/forca_main" />

    <RelativeLayout
        android:id="@+id/relativeForca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="100dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/headImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/head_alive" />

        <ImageView
            android:id="@+id/body"
            android:layout_width="62dp"
            android:layout_height="90dp"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="53dp"
            android:elevation="10dp"
            android:src="@drawable/body" />

        <ImageView
            android:id="@+id/leftArm"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="161dp"
            android:layout_marginTop="59dp"
            android:src="@drawable/arm_left" />

        <ImageView
            android:id="@+id/rigthArm"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="59dp"
            android:src="@drawable/arm_right" />

        <ImageView
            android:id="@+id/rigthLeg"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="110dp"
            android:elevation="4dp"
            android:src="@drawable/leg_right" />

        <ImageView
            android:id="@+id/leftLeg"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="110dp"
            android:elevation="2dp"
            android:src="@drawable/leg_left" />

        <ImageView
            android:id="@+id/rigthFoot"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="158dp"
            android:src="@drawable/foot_right" />

        <ImageView
            android:id="@+id/leftFoot"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="158dp"
            android:src="@drawable/foot_left" />
    </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>